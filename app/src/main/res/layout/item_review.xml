<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="?android:attr/listPreferredItemHeight"
    android:paddingBottom="@dimen/detail_list_item_padding_vertical"
    android:paddingLeft="@dimen/detail_list_item_padding_horizontal"
    android:paddingRight="@dimen/detail_list_item_padding_horizontal"
    android:paddingTop="@dimen/detail_list_item_padding_vertical">

    <TextView
        android:id="@+id/tv_list_item_review_author"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:text="@string/detail_list_item_review_author_default_text"/>

    <TextView
        android:id="@+id/tv_list_item_review_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Small"
        app:layout_constraintTop_toBottomOf="@id/tv_list_item_review_author"
        app:fontFamily="sans-serif-light"
        tools:text="@string/detail_list_item_review_content_default_text"/>

</android.support.constraint.ConstraintLayout>